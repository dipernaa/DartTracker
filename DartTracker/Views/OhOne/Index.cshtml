<h2>Oh One</h2>

<div class="btn-group">
    <a id="startGameButton" class="btn btn-default" data-bind="click: startGame">Start Game</a>
    <a id="submitTurnButton" class="btn btn-default" data-bind="click: submitTurn">Submit Turn</a>
    @Html.ActionLink("Restart", "Index", "OhOne", null, new { @class = "btn btn-default" })
</div>
<select id="gameSelector" data-bind="options: gameModes, selectedOptions: selectedGameMode"></select>

<table class="table table-bordered gameTable">
    <tbody>
        <tr>
            <td id="firstPlayer"><input class="form-control" type="text" data-bind="value: firstPlayerName" maxlength="4" placeholder="First Player Name" /></td>
            <td colspan="2"><p data-bind="ifnot: namesEntered">Enter names before playing</p></td>
            <td id="secondPlayer"><input class="form-control" type="text" data-bind="value: secondPlayerName" maxlength="4" placeholder="Second Player Name" /></td>
        </tr>
        <!-- ko foreach: dartNumbers -->
        <tr data-bind="foreach: numbers">
            <td class="hitsCell" data-bind="text: $data, click: $root.handleClick"></td>
        </tr>
        <!-- /ko -->
        <tr>
            <td class="hitsCell multiplyerCell" data-bind="click: doubleClick">double</td>
            <td class="hitsCell" colspan="2" data-bind="click: handleClick">bull</td>
            <td class="hitsCell multiplyerCell" data-bind="click: tripleClick">triple</td>
        </tr>
    </tbody>
</table>

<table class="table table-bordered gameTable">
    <tbody>
        <tr>
            <td data-bind="text: firstPlayerScore"></td>
            <td data-bind="text: gameStatus"></td>
            <td data-bind="text: secondPlayerScore"></td>
        </tr>
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/ohOne")
}