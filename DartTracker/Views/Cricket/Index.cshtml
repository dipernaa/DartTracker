<h2>Cricket</h2>
<div class="btn-group">
    <button id="startGameButton" class="btn btn-default" data-bind="click: startGame">Start Game</button>
    @Html.ActionLink("Restart", "Index", "Cricket", null, new { @class = "btn btn-default" })
</div>

<table class="table table-bordered gameTable">
    <tbody>
        <tr>
            <td id="firstPlayer"><input class="form-control" type="text" data-bind="value: firstPlayerName" maxlength="4" placeholder="First Player Name" /></td>
            <td><p id="errorMessage">Enter names before playing</p></td>
            <td id="secondPlayer"><input class="form-control" type="text" data-bind="value: secondPlayerName" maxlength="4" placeholder="Second Player Name" /></td>
        </tr>
        <!-- ko foreach: lines -->
        <tr>
            <td class="hitsCell" data-bind="click: $root.firstHit"><img data-bind="attr: { src: firstImageSrc }"/></td>
            <td data-bind="text: points"></td>
            <td class="hitsCell" data-bind="click: $root.secondHit"><img data-bind="attr: { src: secondImageSrc }" /></td>
        </tr>
        <!-- /ko -->
        <tr>
            <td data-bind="text: firstPlayerScore"></td>
            <td>SCORE</td>
            <td data-bind="text: secondPlayerScore"></td>
        </tr>
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/cricket")
}
