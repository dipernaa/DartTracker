@Html.Hidden("Scores", (string)ViewBag.SCORES, new { id = "scores" })

<h2>Cricket Leaderboard</h2>

<div class="table-responsive">
    <table id="leaderboardTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Winner</th>
                <th>Loser</th>
                <th>Spread</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: scores">
            <tr>
                <td data-bind="text: $data.WINNER"></td>
                <td data-bind="text: $data.LOSER"></td>
                <td data-bind="text: $data.SPREAD"></td>
                <td data-bind="text: $data.DATE"></td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/leaderboard")
}