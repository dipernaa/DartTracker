<h2>Cricket @Html.ActionLink("Restart", "Index", "Cricket", null, new { @class = "btn btn-default" })</h2>

<table class="table table-bordered gameTable">
    <tbody>
        <tr>
            <td><input id="firstPlayer" type="text" data-bind="value: firstPlayerName" maxlength="4" placeholder="First Player Name" /></td>
            <td></td>
            <td><input id="secondPlayer" type="text" data-bind="value: secondPlayerName" maxlength="4" placeholder="Second Player Name" /></td>
        </tr>
        <!-- ko foreach: lines -->
        <tr>
            <td class="hitsCell" data-bind="click: $root.firstHit"><img class="hitsImage" data-bind="attr: { src: firstImageSrc }"/></td>
            <td data-bind="text: points"></td>
            <td class="hitsCell" data-bind="click: $root.secondHit"><img class="hitsImage" data-bind="attr: { src: secondImageSrc }" /></td>
        </tr>
        <!-- /ko -->
        <tr>
            <td data-bind="text: firstPlayerScore"></td>
            <td>SCORE</td>
            <td data-bind="text: secondPlayerScore"></td>
        </tr>
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/cricket")
}
