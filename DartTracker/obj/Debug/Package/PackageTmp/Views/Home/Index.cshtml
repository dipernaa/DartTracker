<div class="jumbotron mainJumbo">
    <h1>Dart Tracker</h1>
    <p>Score a game of darts and track leaderboards(coming soon!) with your friends.</p>
    <p>A companion app is also in the works!</p>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>301</h2>
        <p>Start with a set amount of points and try to get to zero but not below it.</p>
        @Html.ActionLink("Start Game", "Index", "OhOne", null, new { @class = "btn btn-primary" })
    </div>
    <div class="col-md-6">
        <h2>Cricket</h2>
        <p>Be the first player to open or close all the cricket numbers and have a higher or even point total.</p>
        @Html.ActionLink("Start Game", "Index", "Cricket", null, new { @class = "btn btn-primary" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/home")
}